<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/margin_big">

    <TextView
        android:id="@+id/date_created_post_textview"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="23 September 2009 в 13:17" />

    <TextView
        android:id="@+id/author_post_textview"
        style="@style/Base.TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        tools:text="mobilz" />

    <TextView
        android:id="@+id/title_post_textview"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_created_post_textview"
        android:layout_marginBottom="@dimen/margin_mini"
        android:layout_marginTop="@dimen/margin_mini"
        tools:text="Разработка ⯈ Были получены исходники 3300 глобальных интернет-проектов" />

    <TextView
        android:id="@+id/hub_title_post_textview"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_post_textview"
        android:ellipsize="marquee"
        android:maxLines="2"
        tools:text="Информационная безопасность" />

    <LinearLayout
        android:id="@+id/statistic_post_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hub_title_post_textview"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/score_post_textview"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_stat_post"
            android:drawablePadding="@dimen/margin_mini"
            android:drawableStart="@drawable/ic_stat_post"
            tools:text="+724" />

        <TextView
            android:id="@+id/views_post_textview"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginStart="@dimen/margin_big"
            android:drawableLeft="@drawable/ic_watch_stat_post"
            android:drawablePadding="@dimen/margin_mini"
            android:drawableStart="@drawable/ic_watch_stat_post"
            tools:text="557520" />

        <TextView
            android:id="@+id/comments_post_textview"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginStart="@dimen/margin_big"
            android:drawableLeft="@drawable/ic_comment_label"
            android:drawablePadding="@dimen/margin_mini"
            android:drawableStart="@drawable/ic_comment_label"
            tools:text="775" />
    </LinearLayout>
</RelativeLayout>